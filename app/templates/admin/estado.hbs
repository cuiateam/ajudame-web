<div class="container">    
    {{#link-to "admin.estado.new" tagName="a" class="btn btn-primary pull-right"}}Novo{{/link-to}}
    <h2>Estado</h2>
    <div class="container">        
        {{outlet}}
    </div>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Sigla</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each model as |item|}}
                    <tr>
                        <td>{{item.id}}</td>
                        <td>{{item.nome}}</td>
                        <td>{{item.sigla}}</td>
                        <td><button class="btn btn-danger" {{action 'deleteEstado' item}}>X</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>