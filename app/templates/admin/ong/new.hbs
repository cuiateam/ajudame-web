<div class="col-md-8 col-md-offset-2">
    <div class="well">
        <form>
            <div class="form-group">
                <label for="Tipo">Tipo</label>
                {{ong-tipo-select ong=ong ongTipos=ongTipos}}
            </div>
            <div class="form-group">
                <label for="Tipo">Tipo</label>
                {{cidade-select ong=ong cidades=cidades}}
            </div>
            <div class="form-group">
                <label for="Nome">Nome</label>
                {{input type="text" value=ong.nome class="form-control" placeholder="Nome da ONG"}}
            </div>
            <div class="form-group">
                <label for="Descricao">Descrição</label>
                 {{textarea type="text" value=ong.descricao class="form-control" placeholder="Descrição da ONG"}}
            </div>
            <div class="form-group">
                <label for="Trabalhos">Trabalhos</label>
                 {{textarea type="text" value=ong.trabalhos class="form-control" placeholder="Trabalhos em lista separados por ;"}}
            </div>
            <div class="form-group">
                <label for="Favorecidos">Favorecidos</label>
                 {{textarea type="text" value=ong.favorecidos class="form-control" placeholder="Favorecidos em lista separados por ;"}}
            </div>
            <div class="form-group">
                <label for="Endereço">Endereço</label>
                 {{textarea type="text" value=ong.endereco class="form-control" placeholder="Endereço descritivo"}}
            </div>
            <div class="form-group">
                <label for="Localização">Localização</label>
                 {{input type="text" value=ong.localizacao class="form-control" placeholder="Coordenadas geográficas, Graus decimais (DD) ex.: 41.40338, 2.17403"}}
            </div>
            <hr />
            <div class="form-group" style="text-align:right;">
                <button type="subimt" class="btn btn-primary" {{action 'saveOng' ong}} >Salvar</button>
                {{#link-to "admin.ong" tagName="a" class="btn btn-default" }}Fechar{{/link-to}}
            </div>
        </form>
    </div>
</div>