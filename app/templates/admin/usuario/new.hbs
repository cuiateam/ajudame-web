<div class="col-md-8 col-md-offset-2">
    <div class="well">
        <form>
            <div class="form-group">
                <label for="Nome">Nome</label>
                {{input type="text" value=model.nome class="form-control" placeholder="Nome"}}
            </div>
            <div class="form-group">
                <label for="Login">Login</label>
                 {{input type="text" value=model.login class="form-control" placeholder="Login"}}
            </div>
            <div class="form-group">
                <label for="E-mail">E-mail</label>
                 {{input type="text" value=model.email class="form-control" placeholder="E-mail"}}
            </div>
            <div class="form-group">
                <label for="Senha">Senha</label>
                 {{input type="password" value=model.senha class="form-control" placeholder="Senha"}}
                 <small id="emailHelp" class="form-text text-muted">A senha deve conter mais de 10 caracteres!</small>
            </div>
            <div class="form-group">
                <button type="subimt" class="btn btn-primary" {{action 'saveUsuario' model}} disabled={{unless model.isValid true}}>Salvar</button>
                {{#link-to "admin.usuario" tagName="a" class="btn btn-default" }}Fechar{{/link-to}}
            </div>
        </form>
    </div>
</div>